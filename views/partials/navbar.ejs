<!-- Navigation -->
<nav class="hidden md:flex items-center space-x-6">
    <a href="/" class="text-white hover:text-blue-200 transition-colors font-medium">Home</a>
    <a href="/quiz" class="text-white hover:text-blue-200 transition-colors font-medium">Play Quiz</a>
    <a href="/leaderboard" class="text-white hover:text-blue-200 transition-colors font-medium">Leaderboard</a>
    <% if (user) { %>
        <a href="/profile" class="text-white hover:text-blue-200 transition-colors font-medium">Profile</a>
        <a href="/logout" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition-colors font-medium">Logout</a>
    <% } else { %>
        <a href="/login" class="bg-white hover:bg-blue-50 text-blue-600 px-4 py-2 rounded-lg transition-colors font-medium">Login</a>
    <% } %>
</nav>

<!-- Mobile Menu Button -->
<button id="mobile-menu-btn" class="md:hidden text-white focus:outline-none">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
</button>

<!-- Mobile Menu -->
<div id="mobile-menu" class="hidden md:hidden absolute right-4 top-16 bg-blue-700 rounded-lg shadow-xl p-4 z-50">
    <div class="flex flex-col space-y-2 min-w-[200px]">
        <a href="/" class="text-white hover:bg-blue-600 px-3 py-2 rounded transition-colors">Home</a>
        <a href="/quiz" class="text-white hover:bg-blue-600 px-3 py-2 rounded transition-colors">Play Quiz</a>
        <a href="/leaderboard" class="text-white hover:bg-blue-600 px-3 py-2 rounded transition-colors">Leaderboard</a>
        <% if (user) { %>
            <a href="/profile" class="text-white hover:bg-blue-600 px-3 py-2 rounded transition-colors">Profile</a>
            <a href="/logout" class="bg-red-500 hover:bg-red-600 text-white px-3 py-2 rounded transition-colors">Logout</a>
        <% } else { %>
            <a href="/login" class="bg-white hover:bg-blue-50 text-blue-600 px-3 py-2 rounded transition-colors">Login</a>
        <% } %>
    </div>
</div>

<script>
    // Mobile menu toggle
    document.getElementById('mobile-menu-btn')?.addEventListener('click', function() {
        const menu = document.getElementById('mobile-menu');
        menu.classList.toggle('hidden');
    });
</script>